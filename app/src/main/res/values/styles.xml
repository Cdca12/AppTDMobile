<resources>

    <style name="General" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorHeader</item>
        <item name="colorPrimaryDark">@color/colorToolbar</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- El Home es fullscreen, no se verÃ¡ ni el ToolBar -->
    <style name="Home" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>

    <style name="LogoText">
        <item name="android:fontFamily">Lato</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">100sp</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="LabelText">
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textColor">#FF5A6978</item>
        <item name="android:textSize">21sp</item>
        <item name="android:lineSpacingMultiplier">0.38</item>
    </style>

    <style name="ButtonLogin">
        <item name="android:radius">10dp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:background">#323232</item>
    </style>

    <style name="General.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="General.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
