<resources>

    <style name="General" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Esto quita el Fullscreen, mostrando el Toolbar. Los que tengan ActionBar van a ser shape en drawables -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimaryDark">@color/colorToolbar</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- El Home es fullscreen, no se verÃ¡ ni el ToolBar -->
    <style name="Home" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimaryDark">@color/colorToolbar</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LogoText">
        <item name="android:fontFamily">Lato</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">100sp</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="LabelText">
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textColor">#FF5A6978</item>
        <item name="android:textSize">21sp</item>
        <item name="android:lineSpacingMultiplier">0.38</item>
    </style>

</resources>
